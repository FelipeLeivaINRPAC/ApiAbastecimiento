		"typescript": "^5.9.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@types/bcrypt": "^6.0.0",
		"@types/better-sqlite3": "^7.6.13",
		"@types/express": "^5.0.3",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.2.1",
		"@typescript-eslint/eslint-plugin": "^8.39.0",
